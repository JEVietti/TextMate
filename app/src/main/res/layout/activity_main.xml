<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/abc_menu_hardkey_panel_holo_dark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/testBox"
        android:layout_gravity="center_horizontal" />

   <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView2"
        android:layout_gravity="right"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" /> -->


    <ListView android:id="@+id/SMSList"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/testBox"
        android:layout_centerHorizontal="true"
        android:background="#fcffff" />

    <Button android:layout_width="95dp" android:layout_height="95dp" android:text="Contacts"
        android:id="@+id/contact_button"
        android:background="@drawable/abc_ab_bottom_solid_dark_holo" android:textColor="#ffffff"
        android:layout_x="8dp" android:layout_y="239dp"
        android:layout_alignTop="@+id/settings_button"
        android:layout_alignStart="@+id/SMSList" />

    <Button android:layout_width="95dp" android:layout_height="95dp" android:text="Edit"
        android:id="@+id/settings_button" android:textColor="#ffffff"
        android:background="@drawable/abc_ab_bottom_solid_dark_holo"
        android:layout_alignTop="@+id/edit_button" android:layout_centerHorizontal="true"
        android:layout_x="116dp" android:layout_y="239dp" />

    <Button android:layout_width="95dp" android:layout_height="95dp" android:text="Info"
        android:id="@+id/edit_button" android:background="@drawable/abc_ab_bottom_solid_dark_holo"
        android:textColor="#fff9fe"
        android:layout_x="226dp" android:layout_y="239dp"

        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/SMSList"
        android:layout_marginEnd="50dp" />

</RelativeLayout>
